<form id="sign-up-form" action="/user" method="POST">
  <input type="text" name="first_name" placeholder="First Name" />
  <input type="text" name="last_name" placeholder="Last Name" />
  <label>Birthday: <input type="date" name="birthday" /></label>
  <input type="text" name="email" placeholder="Email" />
  <input type="text" name="username" placeholder="Username" />
  <input type="password" name="password" placeholder="Password" />
  <button class="btn btn-info btn-block login" type="submit">Sign Up</button>
</form>

<div class="container auth">
    <h1 class="text-center">"Accidental adventures nearer and nearer with every footstep" <span>Buut.. before you go off, sign up first!</span> </h1>
    <div id="big-form" class="well auth-box">
      <form>
        <fieldset>

          <!-- Form Name -->
<!--           <legend>Nice form example</legend> -->

          <!-- Text input-->
          <div class="form-group">
            <label class=" control-label" for="textinput">First Name</label>
            <div class="">
              <input id="textinput" name="first_name" placeholder="First Name" class="form-control input-md" type="text">
              <!-- <span class="help-block">help</span> -->
            </div>
          </div>

          <div class="form-group">
            <label class=" control-label" for="textinput">Last Name</label>
            <div class="">
              <input id="textinput" name="last_name" placeholder="Last Name" class="form-control input-md" type="text">
              <!-- <span class="help-block">help</span> -->
            </div>
          </div>

          <div class="form-group">
            <label class=" control-label" for="textinput">Birthday</label>
            <div class="">
              <input id="textinput" name="birthday" placeholder="Birthday" class="form-control input-md" type="date">
              <!-- <span class="help-block">help</span> -->
            </div>
          </div>

          <div class="form-group">
            <label class=" control-label" for="textinput">Email</label>
            <div class="">
              <input id="textinput" name="email" placeholder="Email" class="form-control input-md" type="text">
              <!-- <span class="help-block">help</span> -->
            </div>
          </div>
          <!-- Password input-->
          <div class="form-group">
            <label class=" control-label" for="passwordinput">Password</label>
            <div class="">
              <input id="passwordinput" name="password" placeholder="Password" class="form-control input-md" type="password">
              <!-- <span class="help-block">help</span> -->
            </div>
          </div>

          <!-- File Button -->
          <div class="form-group">
            <label class=" control-label" for="filebutton">Avatar</label>
            <div class="">
              <input id="filebutton" name="profile_picture" class="input-file" type="file">
            </div>
          </div>

          <legend>Getting to know our Adventurors!</legend>
          <!-- Multiple Radios -->
          <div class="form-group">
            <label class=" control-label" for="radios">Do you like this my Bootstrap choice?</label>
            <div class="">
              <div class="radio">
                <label for="radios-0">
                  <input name="radios" id="radios-0" value="1" checked="checked" type="radio">
                  Hell yeah
                </label>
              </div>
              <div class="radio">
                <label for="radios-1">
                  <input name="radios" id="radios-1" value="2" type="radio">
                  Learn how to code bro
                </label>
              </div>
            </div>
          </div>

          <!-- Multiple Radios (inline) -->
          <div class="form-group">
            <label class=" control-label" for="radios">How adventurous are you? (4 being the maximum cwaaaazy!)</label>
            <div class="">
              <label class="radio-inline" for="radios-0">
                <input name="crazy_scale1" id="radios-0" value="1" checked="checked" type="radio">
                1
              </label>
              <label class="radio-inline" for="radios-1">
                <input name="crazy_scale2" id="radios-1" value="2" type="radio">
                2
              </label>
              <label class="radio-inline" for="radios-2">
                <input name="crazy_scale3" id="radios-2" value="3" type="radio">
                3
              </label>
              <label class="radio-inline" for="radios-3">
                <input name="crazy_scale4" id="radios-3" value="4" type="radio">
                4
              </label>
            </div>
          </div>

          <!-- Multiple Checkboxes -->
          <div class="form-group">
            <label class=" control-label" for="checkboxes">Extra features</label>
            <div class="">
              <div class="checkbox">
                <label for="checkboxes-0">
                  <input name="checkboxes" id="checkboxes-0" value="1" type="checkbox">
                  Paper plains
                </label>
              </div>
              <div class="checkbox">
                <label for="checkboxes-1">
                  <input name="checkboxes" id="checkboxes-1" value="2" type="checkbox">
                  Iron man
                </label>
              </div>
            </div>
          </div>

          <!-- Multiple Checkboxes (inline) -->
          <div class="form-group">
            <label class=" control-label" for="checkboxes">Any more?</label>
            <div class="">
              <label class="checkbox-inline" for="checkboxes-0">
                <input name="checkboxes" id="checkboxes-0" value="1" type="checkbox">
                One
              </label>
              <label class="checkbox-inline" for="checkboxes-1">
                <input name="checkboxes" id="checkboxes-1" value="2" type="checkbox">
                Two
              </label>
              <label class="checkbox-inline" for="checkboxes-2">
                <input name="checkboxes" id="checkboxes-2" value="3" type="checkbox">
                Drum and bass
              </label>
              <label class="checkbox-inline" for="checkboxes-3">
                <input name="checkboxes" id="checkboxes-3" value="4" type="checkbox">
                Dub
              </label>
            </div>
          </div>

          <!-- Search input-->
          <div class="form-group">
            <label class=" control-label" for="searchinput">Search Input</label>
            <div class="">
              <input id="searchinput" name="searchinput" placeholder="placeholder" class="form-control input-md" type="search">
              <p class="help-block">help</p>
            </div>
          </div>

          <!-- Textarea -->
          <div class="form-group">
            <label class=" control-label" for="textarea">Text Area</label>
            <div class="">
              <textarea class="form-control" id="textarea" name="textarea">default text</textarea>
            </div>
          </div>

        </fieldset>
      </form>
    </div>
    <div class="clearfix"></div>
  </div>
